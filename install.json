{
  "$schema": "http://json.schemastore.org/install",
  "resources": {
    "body": [
      {
        "type": "script",
        "src": "./dist/bundle.js"
      }
    ]
  },
  "dns": [
    {
      "type": "TXT",
      "content": "Managed TXT Record",
      "name": "Hosts cloudflare-myalgo-btn-app",
      "ttl": 120
    },
    {
      "type": "CNAME",
      "name": "{{options.subDomain}}",
      "content": "wallet.myalgo.com"
    }
  ],
  "preview": {
    "handlers": [
      {
        "options": [
          "_default"
        ],
        "execute": "INSTALL_SCOPE.setOptions(INSTALL_OPTIONS)"
      }
    ]
  },
  "options": {
    "properties": {
      "location": {
        "title": "MyAlgo Button Location",
        "description": "Where should the button appear?",
        "order": 0,
        "type": "object",
        "format": "element",
        "default": {
          "selector": "body",
          "method": "prepend"
        }
      },
      "subDomain": {
        "order": 1,
        "title": "Sub-domain",
        "type": "string",
		"default": "myalgo"
      },
	  "width": {
        "order": 2,
        "title": "Width",
        "type": "number",
		"default": 128
      },
	  "height": {
        "order": 3,
        "title": "Height",
        "type": "number",
		"default": 25
      },
      "theme": {
        "order": 4,
        "title": "Theme",
        "format": "radios",
        "type": "string",
        "default": "dark",
        "enum": [
          "dark",
          "light"
        ],
        "enumNames": {
          "light": "Light",
          "dark": "Dark"
        }
      }
    }
  }
}